<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/red_shade_2">

    <EditText
        android:id="@+id/registerPasswordInputField"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="5dp"
        android:autoText="false"
        android:autofillHints="@string/password"
        android:background="@drawable/edit_text_background"
        android:elevation="10dp"
        android:ems="10"
        android:hint="@string/password"
        android:inputType="textPassword"

        android:maxLength="15"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="@color/text_red_half_transparent"
        android:textColorHint="@color/text_red_half_transparent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registerUsernameInputField" />

    <EditText
        android:id="@+id/registerConfirmPasswordInputField"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="4dp"
        android:autoText="false"
        android:autofillHints="@string/confirm_password"
        android:background="@drawable/edit_text_background"
        android:elevation="10dp"
        android:ems="10"
        android:hint="@string/confirm_password"

        android:inputType="textPassword"
        android:maxLength="15"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="@color/text_red_half_transparent"
        android:textColorHint="@color/text_red_half_transparent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registerPasswordInputField" />

    <EditText
        android:id="@+id/fullNameInputField"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="244dp"
        android:autofillHints="@string/full_name"
        android:background="@drawable/edit_text_background"
        android:elevation="10dp"
        android:ems="10"
        android:hint="@string/full_name"
        android:inputType="textPersonName"
        android:maxLength="15"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="@color/text_red_half_transparent"

        android:textColorHint="@color/text_red_half_transparent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/registerButton"
        android:layout_width="320dp"
        android:layout_height="55dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/white_shade_1"
        android:elevation="10dp"
        android:stateListAnimator="@null"
        android:text="@string/register"
        android:textColor="@color/text_red"
        app:cornerRadius="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registerConfirmPasswordInputField"
        tools:ignore="TextContrastCheck" />

    <EditText
        android:id="@+id/emailnputField"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="5dp"
        android:autofillHints="@string/email"
        android:background="@drawable/edit_text_background"
        android:elevation="10dp"
        android:ems="10"
        android:hint="@string/email"
        android:inputType="textPersonName"
        android:maxLength="15"
        android:padding="10dp"
        android:singleLine="true"

        android:textColor="@color/text_red_half_transparent"
        android:textColorHint="@color/text_red_half_transparent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fullNameInputField" />

    <EditText
        android:id="@+id/registerUsernameInputField"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="5dp"
        android:autofillHints="@string/username"
        android:background="@drawable/edit_text_background"
        android:elevation="10dp"
        android:ems="10"
        android:hint="@string/username"
        android:inputType="textPersonName"
        android:maxLength="15"
        android:padding="10dp"
        android:singleLine="true"

        android:textColor="@color/text_red_half_transparent"
        android:textColorHint="@color/text_red_half_transparent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailnputField" />
</androidx.constraintlayout.widget.ConstraintLayout>